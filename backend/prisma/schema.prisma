// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guest {
  guest_email                 String        @id @unique
  reservations                Reservation[] @relation(name: "guests_of_reservation")
  reservations_where_arranger Reservation[] @relation(name: "arranger_of_reservation")
}

model Reservation {
  res_id         Int         @id @default(autoincrement())
  res_name       String
  room           MeetingRoom @relation(fields: [room_id], references: [room_id], onDelete: Cascade)
  room_id        Int
  date_start     DateTime
  date_end       DateTime
  description    String?
  guests         Guest[]     @relation(name: "guests_of_reservation")
  arranger       Guest       @relation(name: "arranger_of_reservation", fields: [arranger_email], references: [guest_email])
  arranger_email String
  createdAt      DateTime    @default(now())

  @@unique([room_id, date_start])
}

model MeetingRoom {
  room_id      Int           @id @default(autoincrement())
  name         String        @unique
  reservations Reservation[]
}
